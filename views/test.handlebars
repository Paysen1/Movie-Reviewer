<div class="row row-cols-3 g-3 justify-content-center">
    {{#each movies as | movie|}} 
      <div class="row">
          <div class="card">
            <h4 class="card-header">{{movie.title}} </h4>
             <div class="card-body">
                <img src="https://image.tmdb.org/t/p/w500{{movie.poster_path}}"  class="card-img-top"/>
              <p class="card-text"><div>{{movie.overview}}</div>
                <button class="btn btn-primary btn-block" onclick="/page">Review this movie</button>
               </div>
               </div>
               </div>
{{/each}}
</div>
</div>
</div>